# PKGrower Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=production
MODO_SIMULACION=false

# ===========================================
# TUYA API CREDENTIALS
# Get these from: https://platform.tuya.com/
# ===========================================
TUYA_ACCESS_KEY=your_tuya_access_key
TUYA_SECRET_KEY=your_tuya_secret_key
TUYA_API_HOST=https://openapi.tuyaus.com

# ===========================================
# TUYA DEVICE IDs
# Get these from Tuya IoT Platform or device scan
# ===========================================
# Substrate Sensors
TUYA_SENSOR_SUSTRATO_1_ID=your_sensor_1_id
TUYA_SENSOR_SUSTRATO_2_ID=your_sensor_2_id
TUYA_SENSOR_SUSTRATO_3_ID=your_sensor_3_id

# Environment Sensor
TUYA_SENSOR_AMBIENTE_ID=your_ambiente_sensor_id

# Controllers
TUYA_BOMBA_CONTROLLER_ID=your_pump_controller_id
TUYA_EXTRACTOR_CONTROLLER_ID=your_extractor_id
TUYA_LUZ_ROJA_CONTROLLER_ID=your_red_light_id
TUYA_VENTILADOR_IZQ_ID=your_fan_left_id
TUYA_VENTILADOR_DER_ID=your_fan_right_id
TUYA_DESHUMIDIFICADOR_ID=your_dehumidifier_id
TUYA_LLAVE_AGUA_ID=your_water_valve_id

# ===========================================
# FIREBASE CONFIGURATION
# Get from Firebase Console > Project Settings > Service Accounts
# ===========================================
FIREBASE_PROJECT_ID=pk-grower
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@pk-grower.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ===========================================
# XIAOMI (Optional)
# ===========================================
XIAOMI_HUMIDIFIER_ID=
XIAOMI_HUMIDIFIER_TOKEN=
XIAOMI_HUMIDIFIER_IP=
XIAOMI_CAMERA_ID=
XIAOMI_CAMERA_TOKEN=
XIAOMI_CAMERA_IP=

# ===========================================
# MEROSS (Optional)
# ===========================================
MEROSS_EMAIL=
MEROSS_PASSWORD=

# ===========================================
# AI (Optional)
# Get from: https://aistudio.google.com/
# ===========================================
GEMINI_API_KEY=your_gemini_api_key
