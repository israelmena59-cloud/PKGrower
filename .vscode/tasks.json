{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸš€ Start All (Frontend + Backend)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:all"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*?)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+([^:]+):\\s+(.*)$",
          "file": 1,
          "location": 2,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*started.*",
          "endsPattern": "^.*ready.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Frontend Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Backend Dev Server",
      "type": "shell",
      "command": "cd backend && npm run dev:backend",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Production",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint Code",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
